{
  "name": "kode",
  "version": "0.0.0",
  "scripts": {
    "config": "esbuild --bundle --tree-shaking=true --mangle-props=_$ --reserve-props=^__.*__$ --splitting --chunk-names=chunks/[name] --format=esm",
    "dev": "npm run config -- src/main.ts --sourcemap --servedir=public",
    "build": "npm run config -- --define:process.env.NODE_ENV=\\\"production\\\" src/kode.ts --minify --legal-comments=linked --drop:console --outdir=dist --analyze",
    "preview": "npm run dev --minify --legal-comments=linked --drop:console"
  },
  "devDependencies": {
    "@types/node": "^17.0.18",
    "@types/prismjs": "^1.26.0",
    "esbuild": "^0.14.23",
    "stats.js": "^0.17.0",
    "typescript": "^4.5.5"
  }
}
